FROM izonder/anny:latest

##############################################################################
# Copy sources
##############################################################################

WORKDIR /src
COPY . /src

RUN set -x \

##############################################################################
# Install dependencies
##############################################################################

    && cp -f ./nginx/default.conf /etc/nginx/conf.d/default.conf \

##############################################################################
# Clean up
##############################################################################

    && echo "OK!"

##############################################################################
# Entry point
##############################################################################

EXPOSE 80
